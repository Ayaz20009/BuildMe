div
	form(method="get",action="/jobs")
		div.form-group
			button.btn.btn-success.btn-block Search   
				i.fa.fa-search 
		div.form-group
			input.form-control(type="text",placeholder="Job Descprtion",name="jobDesc")
		div.form-group
			input.form-control(type="text",placeholder="City",name="city")
		div.form-group
			select.bfh-select-fix.bfh-states.form-control(data-country="US",name="state")
		div.form-group
			input.form-control.numeric(type="text",placeholder="zipcode",name="zipcode",maxlength="6")
		div.form-group
			label.control-label Project needed by Date:
			div.datepicker(type="text",placeholder="By Date",name="date")
