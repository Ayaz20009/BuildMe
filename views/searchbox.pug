form.col-lg-12.well(style="margin-bottom:0",method="get",action="/jobs")
	div.form-group.col-lg-12
		input.form-control(type="text",placeholder="Job Descprtion",name="jobDesc")
	div.form-group.col-lg-6
		input.form-control(type="text",placeholder="City",name="city")
	div.form-group.col-lg-6
		select.bfh-select-fix.bfh-states.form-control(data-country="US",name="state")
