include base.pug
div(align='center')
  div.panel.panel-primary(style="width:40%",align='center')
    div.panel-heading Please enter your account information:
    div.panel-body
      ul.nav.nav-tabs
        li.active
          a(data-toggle="tab",href="#tab1")
           span.glyphicon.glyphicon-home
           span.glyphicon.glyphicon-user  Homeowner
        li
          a(data-toggle="tab",href="#tab2")
           span.glyphicon.glyphicon-wrench
           span.glyphicon.glyphicon-user  Contractor
      div.tab-content(style="padding-top:5%")
       div#tab1.tab-pane.fade.in.active
        form(action='./homeowner/dashboard', method='post')
         div.form-group
          input.form-control(name="home_email",id="home_email",placeholder="Email",)
         div.form-group
          input.form-control(type= "password", name="home_pass",id="home_pass",placeholder="Password")
         button.btn.btn-success.btn-block Login
       div#tab2.tab-pane.fade.in
        form(action='./contractor/dashboard', method='post')
         div.form-group
          input.form-control(name="con_email",id="con_email",placeholder="Email")
         div.form-group
          input.form-control(type="password",name="con_pass",id="con_pass",placeholder="Password")
         button.btn.btn-primary.btn-block Login
      button.btn.btn-block Forgot Password?
