include base.pug

div(align='center')
  div.panel.panel-primary(style="width:40%",align='center')
    div.panel-heading Please enter your account information:
    //- if !valid
    //-   div.bg-danger Email or Password is not correct !
    div.panel-body
      ul.nav.nav-tabs
        li.active
          a(data-toggle="tab",href="#tab1")
           span.glyphicon.glyphicon-home
           span.glyphicon.glyphicon-user  Homeowner
        li
          a(data-toggle="tab",href="#tab2") 
           span.glyphicon.glyphicon-wrench
           span.glyphicon.glyphicon-user  Contractor
      div.tab-content(style="padding-top:5%")
       div#tab1.tab-pane.fade.in.active.bg-success
        form(action='./homeowner/dashboard', method='post')
         div.form-group
          input.form-control(id="input_hoEmail",name="input_hoEmail",placeholder="Email",)
         div.form-group
          input.form-control(id="input_hoPass",name="input_hoPass",type="password",placeholder="Password")
         button.btn.btn-success.btn-block Login
       div#tab2.tab-pane.fade.in.bg-info
        form(action='./contractor/dashboard', method='post')
         div.form-group
          input.form-control(id="input_conEmail",name="input_conEmail",placeholder="Email")
         div.form-group
          input.form-control(id="input_conPass",name="input_conPass",type="password",placeholder="Password")
         button.btn.btn-info.btn-block Login
      button.btn.btn-block Forgot Password?