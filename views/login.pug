include base.pug
div(align='center')
  div.panel.panel-primary(style="width:40%",align='center')
    div.panel-body
      ul.nav.nav-tabs
        li.active
          a(data-toggle="tab",href="#tab1") Homeowner
        li
          a(data-toggle="tab",href="#tab2") Contractor
      div.tab-content(style="padding-top:5%")
       div#tab1.tab-pane.fade.in.active.bg-success
        form(action='/', method='post')
         div.form-group
          input.form-control(id="home_email",placeholder="Email")
         div.form-group
          input.form-control(id="home_pass",placeholder="Password")
         button.btn.btn-primary.btn-block Login
       div#tab2.tab-pane.fade.in.bg-info
        form(action='/', method='post')
         div.form-group
          input.form-control(id="con_email",placeholder="Email")
         div.form-group
          input.form-control(id="con_pass",placeholder="Password")
         button.btn.btn-primary.btn-block Login
      button.btn.btn-block Forgot Password?