include /base
script(type="text/javascript",src="/js/jq_homeowner.js")
script(type="text/javascript",src="https://www.gstatic.com/charts/loader.js")
script(type="text/javascript",src="/js/jq_chartBids.js")
 - var w = 30;
 - var W = bids.length * w + 15;
div#bids.col-lg-12(style="height:200px;width:"+ W +"vw;min-width:100%;")
div.col-lg-12.well.text-center(style="width:"+ W +"vw;overflow-x:auto;min-width:100%;")
   - var i = 0;
   each bid in bids
     - i++;
     div.panel.panel-warning.panel-bid(id="bidID_"+bid.bidID,style="padding:0;margin:5px;width:"+ w +"vw;display:inline-block;overflow-y:auto;")
        div.panel-heading(style="height:18vh;overflow:auto;font-size:1.1vw;padding:auto 5px auto 5px")
          div.bidInfo
            input.hidden(name="jobID",value=jobID)
            input.hidden(name="bidID",value=bid.bidID)
            input.hidden(name="coID",value=bid.coID)
            input.hidden(name="estDays",value=bid.estDays)
          div.col-lg-2.text-center=bid.jobID
            button.btn.btn-success.btnChooseBid(style="margin-top:3%;padding:0;",role="tooltip",title="Choose this bid.",data-toggle="modal",data-target="#modal_offer",data-placement="right")
              img(src="/img/offerBid.png" style="width:70px;height:70px")
            div
             span(style="height:2.5vw;margin-top:3%;font-size:1.4vw")
               i.fa.fa-gavel='  ' + i
          div.col-lg-8
            - var Name = bid.firstName  + "   " + bid.lastName;
            div.col-lg-12
              label.col-lg-2.control-label
                i.fa.fa-user
              div.col-lg-10=Name
            div.col-lg-12
              label.col-lg-2.control-label
                i.fa.fa-building-o
              div.col-lg-10=bid.companyName
            div.col-lg-12
              label.col-lg-2.control-label
               i.fa.fa-id-card
              div.col-lg-10=bid.licenseNumber
            div.col-lg-12
              label.col-lg-2.control-label
                i.fa.fa-phone
              div.col-lg-10=bid.phoneNumber
            div.col-lg-12
              label.col-lg-2.control-label
                 i.fa.fa-star
              div.col-lg-10(name="points")
          div.col-lg-2
            button.btn.avatar(role="tooltip",title="View Profile", data-placement="left",style="height:3.5vw;width:3.5vw;font-size:2vw")=bid.firstName[0] + bid.lastName[0]
            a.btn.text-primary(role="tooltip",title="Send Message To " + Name, data-placement="left", style="margin-top:10%;padding:0")
               i.fa.fa-comments(style="font-size:3.5vw")
        div.panel-body(style="padding:1%;height:65vh;overflow:auto")
          div.col-lg-12
            label.col-lg-4.control-label Estimate Cost ($)
            div.col-lg-8(name="estCost")=bid.estCost
          div.col-lg-12
            label.col-lg-4.control-label Estimate Time
            - var days = 0;
              if (bid.estDays)
                - days = bid.estDays;
              if (bid.estHours)
                - days += (bid.estHours/24.0).toFixed(1);
            div.col-lg-8=days + "  days"
          div.col-lg-12
            label.col-lg-4.control-label Avaible From
            div.col-lg-8(name="startDate")=bid.startDate.toString().substr(0,15)
          div.col-lg-12
            label.col-lg-4.control-label Comment
            div.col-lg-8=bid.comment
          div.col-lg-12
             label.col-lg-12.control-label.text-center Proposal
             div.col-lg-12
               div.panel.panel-warning(style="height:40vh")
        div.pane-footer
          label.col-lg-4.control-label Bid At
          div.col-lg-8=bid.createdAt.toString().substr(0,24)
include modal_offer.pug
