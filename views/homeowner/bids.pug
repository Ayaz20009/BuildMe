include /base
script(type="text/javascript",src="/js/jq_homeowner.js")
script(type="text/javascript",src="https://www.gstatic.com/charts/loader.js")
//- //script(type="text/javascript",src="/js/jq_chartBids.js")
- var maxReview = 5;
div.containert.text-center(style="width:90%;margin:auto")
   div.well.h2=bids[0].jobDesc
    div.h3=bids[0].street + " " + bids[0].city + " " + bids[0].state + " " + bids[0].zipcode 
   hr
   - var i = 0;
   each bid in bids
     - i++;
     div.panel.panel-warning.panel-bid(id="bidID_"+bid.bidID,style="height:33vw;margin:2px;width:33%;display:inline-block;")
        div.panel-heading(style="height:25%;font-size:1.1vw;padding:2%")
          div.bidInfo.hidden
            input.hidden(name="jobID",value=jobID)
            input.hidden(name="bidID",value=bid.bidID)
            input.hidden(name="coID",value=bid.coID)
            input.hidden(name="estCost",value=bid.estCost)
            input.hidden(name="estDays",value=bid.estDays)
          div.col-lg-2.text-center
            button.btn.btn-success.btnChooseBid(style="margin-top:3%;padding:0;",role="tooltip",title="Choose this bid.",data-toggle="modal",data-target="#modal_offer",data-placement="right")
              img(src="/img/offerBid.png" style="width:70px;height:70px")
            div
             span(style="height:2.5vw;margin-top:3%;font-size:1.2vw")
               i.fa.fa-gavel=' ' + i
          div.col-lg-8
            - var Name = bid.firstName  + "   " + bid.lastName;
            div.col-lg-12
              label.col-lg-2.control-label
                i.fa.fa-user
              div.col-lg-10=Name
            div.col-lg-12
              label.col-lg-2.control-label
                i.fa.fa-building-o
              div.col-lg-10=bid.companyName
            div.col-lg-12
              label.col-lg-2.control-label
               i.fa.fa-id-card
              div.col-lg-10=bid.licenseNumber
            div.col-lg-12
              label.col-lg-2.control-label
                i.fa.fa-phone
              div.col-lg-10=bid.phoneNumber
            div.col-lg-12
              label.col-lg-2.control-label
                 i.fa.fa-star
              div.col-lg-10(name="points")
          div.col-lg-2
            button.btn.avatar(role="tooltip",title="View Profile", data-placement="left",style="height:3.5vw;width:3.5vw;font-size:2vw")=bid.firstName[0] + bid.lastName[0]
            a.btn.text-primary(role="tooltip",title="Send Message To " + Name, data-placement="left", style="margin-top:10%;padding:0")
               i.fa.fa-comments(style="font-size:3.5vw")
        div.col-lg-12(style="height:15%;margin-top:2%")
          div.col-lg-4
            - var costPc = bid.estCost/max.estCost * 100
            div.progress.progress-bar-vertical
              div.progress-bar(data-toggle="tooltip", data-placement="bottom",data-html="true",title='<div class="panel panel-info"><div class="panel-heading">Estimate Cost</div><div class="pane-body h4 text-info">'+ bid.estCost +'</div></div>',role="progressbar", aria-valuenow="30", aria-valuemin="0",aria-valuemax="100",style="background-color:#4286f4;height:"+ costPc +"%")
            div(style="font-weight:bold") Estimate Cost
              div="$ " + bid.estCost
          div.col-lg-4
            - var dayPc = bid.estDays/max.estDays * 100
            div.progress.progress-bar-vertical
              div.progress-bar(data-toggle="tooltip", data-placement="bottom",data-html="true",title='<div class="panel panel-danger"><div class="panel-heading">Estimate Days</div><div class="pane-body h4 text-danger">'+ bid.estDays +'</div></div>',role="progressbar", aria-valuenow="30", aria-valuemin="0",aria-valuemax="100",style="background-color:#DC3912;height:"+ dayPc +"%")
            div(style="font-weight:bold") Estimate Days
              div=bid.estDays + " days"
          div.col-lg-4
            - var review = (Math.random()*5).toFixed(2)
            - var reviewPC = review/5*100;
            div.progress.progress-bar-vertical
              div.progress-bar(data-toggle="tooltip", data-placement="bottom",data-html="true",title='<div class="panel panel-warning"><div class="panel-heading">Average Review</div><div class="pane-body h4 text-danger">'+ review +'</div></div>',role="progressbar", aria-valuenow="30", aria-valuemin="0",aria-valuemax="100",style="background-color:yellow;height:"+ reviewPC +"%")
            div(style="font-weight:bold") Review 
              div=review
        div.panel-body.text-left(style="height:60%;padding:2%;overflow-y:auto;margin-top:35%;")
          div.col-lg-12
           label.col-lg-4.control-label Bid At
           div.col-lg-8=bid.createdAt.toString().substr(0,24)
          div.col-lg-12
            label.col-lg-4.control-label Avalible Date
            div.col-lg-8(name="startDate")=bid.startDate.toString().substr(0,15)
          div.col-lg-12
            label.col-lg-4.control-label Comment
            div.col-lg-8=bid.comment
          div.col-lg-12
             label.col-lg-4.control-label Proposal
             div.col-lg-8
               a  Proposal(PDF)
include modal_offer.pug
