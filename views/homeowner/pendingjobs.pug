include dashboard.pug
div.col-sm-9.col-md-10.col-sm-offset-3.col-md-offset-2(style="padding:2%")
 input.hidden(name="proj_id")
 if (projects.length == 0)
   h1 You have no project yet.
 else
   each project in projects
    div.panel.panel-default(id=project.id)
      div.panel-heading(style="padding:0")
       a.btn-warning.btn-sm.btn.col-lg-1(href="")=project.numBids
        i.fa.fa-gavel.pull-left
       div.dropdown.pull-right
        a.btn.dropbtn
         span.caret
        div.dropdown-content
         button.btnUpdate.btn.btn-sm.btn-success.btn-block Update
         button.btnDeleteJob.btn.btn-sm.btn-danger.btn-block(data-toggle="modal",data-target="#modal_delete_job") Delete
      div.panel-body.jobInfo
       div.row.hidden
        input(name="jobID",value=project.id)
       div.row
        label.col-lg-2.control-label Descrption
        div.col-lg-10=project.jobDesc
       div.row
        label.col-lg-2.control-label Address
        div.col-lg-10=project.street + "," + project.city + " " + project.state + " " + project.zipcode
       div.row
        label.col-lg-2.control-label Create At
        div.col-lg-10=project.createdAt
include modal_delete_job.pug