nav.navbar.navbar-default.navbar-fixed-top#navbar
   div.container-fluid
     div.navbar-header.col-sm-3.col-md-2
        a.navbar-brand(href="/") BuildMe
     ul.nav.navbar-nav
        li
           a(href="/howitworks") How it Works
        li
           a(href="/jobs") Jobs
        li.dropdown#searchDropdown
          a.dropdown-toggle(data-toggle="dropdown") Search A Job
           span.caret
          div.dropdown-menu(style="width:40vw;")
            include searchbox.pug
        if (session)
         li
           if (session.user.usertype == "homeowner")
               a(href="/homeowner/dashboard") Dashboard
           else 
               a(href="/contractor/dashboard") Dashboard
     if !session
      ul.nav.navbar-nav.navbar-right
          li
            a
              span #{Fname} #{Lname}
          li#btnLogin
            a.btn(href="/login")
              span.glyphicon.glyphicon-log-in  Login
          li.dropdown
            a.btn.dropbtn
              span.glyphicon.glyphicon-user  Sign up
            div.dropdown-content.bg-success(style="width:15vw")
              a.btn.btn-primary.btn-block(href="/homeowner-signup")
                span.glyphicon.glyphicon-home
                span.glyphicon.glyphicon-user  Homeowner
              a.btn.btn-primary.btn-block(href="/contractor-signup") 
                span.glyphicon.glyphicon-wrench
                span.glyphicon.glyphicon-user  Contractor
     else
      ul.nav.navbar-nav.navbar-right
        li.dropdown
          a.btn.dropbtn
           span.glyphicon.glyphicon-user 
            span=session.user.firstName + "  "
            span=session.user.lastName
          form(action="/logout",methoud="get")  
           div.dropdown-content(style="width:15vw")
             button.btn.btn-success.btn-block Logout





