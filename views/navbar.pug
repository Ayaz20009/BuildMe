nav.navbar.navbar-default.navbar-fixed-top#navbar
   div.container-fluid
     div.navbar-header.col-sm-3.col-md-2
        a.navbar-brand(href="/") BuildMe
     ul.nav.navbar-nav
        li
           a(href="/howitworks") How it Works
        li
           a(href="/jobs") Jobs
        li
           a(href="/searchajob") Search A Job
     if !user
      ul.nav.navbar-nav.navbar-right
          li
            a
              span #{Fname} #{Lname}
          li#btnLogin
            a.btn(href="/login")
              span.glyphicon.glyphicon-log-in  Login
          li.dropdown
            a.btn.dropbtn
              span.glyphicon.glyphicon-user  Sign up
            div.dropdown-content.list-group
              a.list-group-item.btn(href="/homeowner-signup")
                span.glyphicon.glyphicon-home
                span.glyphicon.glyphicon-user  Homeowner
              a.list-group-item.btn(href="/contractor-signup") 
                span.glyphicon.glyphicon-wrench
                span.glyphicon.glyphicon-user  Contractor
     else
      ul.nav.navbar-nav.navbar-right
        li.dropdown
          a.btn.dropbtn
           span.glyphicon.glyphicon-user  
              span=user.name
              span=user.firstName 
              span=user.lastName
          div.dropdown-content.list-group(style="width:100%")
            if user.name
              a.btn.list-group-item(href="/contractor/dashboard") Dashboard
            else
              a.btn.list-group-item(href="/homeowner/dashboard") Dashboard
            a.btn.list-group-item(href="/") Logout





